<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.PagamentoActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efetuar pagamento"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="15dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Cliente"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/nomeCliente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form_botao"
            android:drawableLeft="@drawable/icon_perfil"
            android:drawableTint="@android:color/darker_gray"
            android:hint="Nome Cliente"
            android:padding="15dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Endereço"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/enderecoCliente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form_botao"
            android:drawableLeft="@drawable/icon_home"
            android:drawableTint="@android:color/darker_gray"
            android:hint="Endereço"
            android:padding="15dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/telefoneCliente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form_botao"
            android:drawableLeft="@drawable/icon_phone"
            android:drawableTint="@android:color/darker_gray"
            android:hint="Telefone"
            android:padding="15dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preço total a pagar"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/precoTotalCliente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form_botao"
            android:drawableLeft="@drawable/icon_price"
            android:drawableTint="@android:color/darker_gray"
            android:hint="Preço Total"
            android:padding="15dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nº Conta a debitar"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/contaCliente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/form_botao"
            android:drawableLeft="@drawable/icon_carteira"
            android:drawableTint="@android:color/darker_gray"
            android:hint="Conta a Debitar"
            android:padding="15dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btnRealizarCompra"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Realizar Compra"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>