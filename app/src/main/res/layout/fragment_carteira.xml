<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="@drawable/background_degrade"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="65dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="176dp"
            android:layout_height="194dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Minha Conta"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Saldo Disponivel"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/saldoDisp"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="5dp"
                android:text="2000$00"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_carteira"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:text="Carregar"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:rotationX="21"
                android:rotationY="-17"
                android:src="@drawable/card" />

            <TextView
                android:id="@+id/numConta"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:paddingTop="5dp"
                android:text="numero conta"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Movimentação da conta"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaMovimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

    </LinearLayout>


</LinearLayout>