<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.DetalheProdutoActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/p_image"
            android:layout_width="360dp"
            android:layout_height="307dp"
            app:srcCompat="@drawable/avatar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/background_degrade">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="67dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/d_produto"
                android:layout_width="143dp"
                android:layout_height="43dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Tomate"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/p_produto"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="150$00 / kg"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="82dp"
                android:layout_height="34dp"
                android:src="@drawable/icon_favorite" />

        </LinearLayout>

        <TextView
            android:id="@+id/t_produto"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:padding="10dp"
            android:text="Tomate bem cultivado com aguas de pedra e adubado com muitas condiÃ§oes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>